
page {
	background-color: #FFFFFF
}
.good-column-padding {
	padding: 24rpx;
}
.good-column {
	width: 100%;
	height: auto;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	border: #f9f9f9 1rpx solid;
	border-radius: 10rpx;
}
.godd-name {
	color: #595757;
	font-size: 32rpx;
	/* height: 40rpx; */
	overflow: hidden;
	/* background-color: #0062CC; */
	text-overflow: ellipsis;
	display: -webkit-box; /*作为弹性伸缩盒子模型显示。 */
	-webkit-box-orient: vertical; /*设置伸缩盒子的子元素排列方式--从上到下垂直排列 */
	-webkit-line-clamp: 1;
}
.good-subtitle {
	font-size: 26rpx;
	color: #AFAFAF;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box; /*作为弹性伸缩盒子模型显示。 */
	-webkit-box-orient: vertical; /*设置伸缩盒子的子元素排列方式--从上到下垂直排列 */
	-webkit-line-clamp: 1;
	/* height: 40rpx; */
	margin-top: 24rpx;
}
.row-price {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	margin-top: 30rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.good-price {
	-webkit-box-flex: 1;
	-webkit-flex-grow: 1;
	        flex-grow: 1;
	color: #ec5353;
	font-size: 34rpx;
	font-weight: bold;
}

